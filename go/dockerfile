#Build
FROM golang:1.22.0 as builder
WORKDIR /app
#download all dependencies
COPY go.mod go.sum ./
RUN go mod download
COPY . .

#main.go directory
COPY app/ .
RUN go build -o main .

EXPOSE 9000

#FROM alpine
# RUN addgroup -S mercari && adduser -S trainee -G mercari
# RUN chown -R trainee:mercari ./app
# USER trainee
CMD ["go", "version"]
